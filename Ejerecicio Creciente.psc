Algoritmo Creciente
	definir A,B,C COMO ENTERO;
	Escribir  "Coloque valores a los numeros"
	leer A,B,C;
	Si A<B Entonces
		Si B<C Entonces
			Escribir "LOS NUMEROS ESTAN EN ORDEN CRECIENTE"
		SiNo
			Escribir "LOS NUMEROS NO ESTAN EN ORDEN CRECIENTE"
		Fin Si
	SiNo
		Escribir "LOS NUMEROS NO ESTAN EN ORDEN CRECIENTE"
	Fin Si
FinAlgoritmo
